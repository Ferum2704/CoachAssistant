
<MudDialog>
    <DialogContent>
        <EditForm Model="@Club">
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Label="Назва" @bind-Value="Club.Name" />
                    <MudTextField Label="Населений пункт" @bind-Value="Club.City" />
                    <MudTextField Label="Регіон" @bind-Value="Club.Region" />
                    <MudTextField Label="Стадіон" @bind-Value="Club.Stadium" />
                </MudItem>
            </MudGrid>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" Variant="Variant.Filled" OnClick="Save">Зберегти</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public ClubViewModel Club { get; set; } = new();
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    private void Save()
    {
        MudDialog.Close(Club);
    }

    private void Cancel()
    {
        MudDialog.Close();
    }
}


<MudDialog>
    <DialogContent>
        <EditForm Model="@Training">
            <MudGrid>
                <MudItem xs="12">
                     <MudTextField T="string" Label="Name" @bind-Value="Training.Name" FullWidth />
                     <MudTextField T="string" Label="Description" @bind-Value="Training.Description" FullWidth Lines="5" />
                     <MudDatePicker Label="Start Date" @bind-Date="Training.StartDate" PickerVariant="PickerVariant.Dialog" />
                     <MudTextField T="float" Label="Duration (hours)" @bind-Value="Training.Duration" FullWidth />
                </MudItem>
             </MudGrid>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Save" Color="Color.Primary" Variant="Variant.Filled">Save</MudButton>
    </DialogActions>
</MudDialog>

 @code {
    [Parameter]
    public TrainingViewModel Training { get; set; } = new();
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    private void Save()
    {
        MudDialog.Close(Training);
    }

    private void Cancel()
    {
        MudDialog.Close();
    }
}

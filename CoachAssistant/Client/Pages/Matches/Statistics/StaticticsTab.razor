<MudGrid Class="px-4 mt-2" Style="background-color: #f9f9f9;">
    <MudItem xs="12">
        <MudText Typo="Typo.h5" Class="mb-2">Домашня команда</MudText>
        <TeamStatistics MatchTeam="@HomeTeam" />
    </MudItem>
    <MudItem xs="12">
        <MudText Typo="Typo.h5" Class="mb-2">Гостьова команда</MudText>
        <TeamStatistics MatchTeam="@AwayTeam" />
    </MudItem>
</MudGrid>

@code {

    [Parameter]
    public MatchTeamViewModel HomeTeam { get; set; }

    [Parameter]
    public MatchTeamViewModel AwayTeam { get; set; }
}

<MudGrid>
    <MudItem xs="12" sm="6">
        <MudText Typo="Typo.h6">@HomeTeam?.Team?.Name Стартовий склад</MudText>
        <TeamLineup Team="@HomeTeam" />
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudText Typo="Typo.h6">@AwayTeam?.Team?.Name Стартовий склад</MudText>
        <TeamLineup Team="@AwayTeam" />
    </MudItem>
</MudGrid>

@code {

    [Parameter]
    public MatchTeamViewModel HomeTeam { get; set; }

    [Parameter]
    public MatchTeamViewModel AwayTeam { get; set; }
}
